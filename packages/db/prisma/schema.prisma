generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==============
//     Model
// ==============
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  nickname  String    @unique
  password  String
  createdAt DateTime  @default(now())
  bio       String?
  subscribes Subscribe[]
  subraddits Subraddit[] 
  posts     Post[]
  comments  Comment[]
  votes     Vote[]
}

model Subscribe {
  @@id([userId,subradditId])

  user        User   @relation(fields: [userId], references: [id])
  userId      Int

  subraddit   Subraddit @relation(fields: [subradditId], references: [id])
  subradditId Int
}

model Subraddit {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String
  creator     User   @relation(fields: [creatorId] ,references: [id])
  creatorId   Int
  subscribes  Subscribe[]
  posts       Post[]
}

model Post {
  id          Int    @id @default(autoincrement())
  title       String
  content     String

  subraddit   Subraddit @relation(fields: [subradditId], references: [id])
  subradditId Int

  author      User @relation(fields: [authorId], references: [id])
  authorId    Int

  comments    Comment[]
  votes       Vote[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int 
  createdAt DateTime  @default(now())

  parentId  Int?
  parent    Comment? @relation("Replies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies   Comment[] @relation("Replies")
  
  vote      Vote[]
}


enum VoteType {
  Up
  down
}
model Vote {
  id Int @id @default(autoincrement())
  type    VoteType
  voter   User @relation(fields: [voterId], references: [id])
  voterId Int
  post    Post? @relation(fields: [postId], references: [id])
  postId  Int?
  comment Comment? @relation(fields: [commentId], references: [id])
  commentId Int?
  @@unique([voterId, postId])
  @@unique([voterId, commentId])
}