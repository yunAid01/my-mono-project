{
  "compilerOptions": {
    "target": "es2023",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@repo/types": ["packages/types/dist/index"],
      "@repo/validation": ["packages/validation/dist/index"],
      "@repo/db": ["packages/db/dist/index"]
    }
  }
}
